<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="4.3"?>

<plugin>
   <extension
         point="org.eclipse.debug.core.breakpoints">
      <breakpoint
            class="org.ruminaq.debug.InternalPortBreakpoint"
            id="internalPortBreakpoint"
            markerType="org.ruminaq.debug.internalPortBreakpointMarker"
            name="InternalPort Breakpoint">
      </breakpoint>
   </extension>
   <extension
         point="org.eclipse.core.resources.markers"
         id="internalPortBreakpointMarker"
         name="Ruminaq">
      <super type="org.eclipse.debug.core.breakpointMarker"/>
      <persistent value="true"/>
      <attribute name="path"/>
      <attribute name="taskId"/>
      <attribute name="portId"/>
      <attribute name="hitCount"/>
      <attribute name="suspendPolicy"/>
   </extension>

   <extension point="org.eclipse.debug.ui.detailPaneFactories">
      <detailFactories class="org.ruminaq.tasks.debug.ui.BreakpointDetailPaneFactory"
                          id="org.ruminaq.tasks.debug.ui.breakpoint.detailFactories">
         <enablement>
            <with variable="selection">
               <count value="1"/>
               <iterate><or><instanceof value="org.ruminaq.tasks.debug.ui.InternalPortBreakpoint"/></or></iterate>
            </with>
         </enablement>
      </detailFactories>
   </extension>

   <extension point="org.eclipse.ui.propertyPages">
      <page name="InternalPort Breakpoint"
            class="org.ruminaq.tasks.debug.ui.InternalPortBreakpointPage"
            id="org.ruminaq.tasks.debug.ui.InternalPortBreakpointPage">
         <enabledWhen>
            <or>
               <instanceof value="org.ruminaq.tasks.debug.ui.InternalPortBreakpoint"/>
               <adapt       type="org.ruminaq.tasks.debug.ui.InternalPortBreakpoint"/>
            </or>
         </enabledWhen>
      </page>
   </extension>
   <extension point="org.eclipse.debug.core.sourceLocators">
      <sourceLocator
          class="org.ruminaq.debug.model.SicSourceLocator"
          id="org.ruminaq.debug.model.sourceLocator"
          name="Ruminaq source locator">
      </sourceLocator>
   </extension>
   <extension
       point="org.eclipse.debug.ui.debugModelPresentations">
      <debugModelPresentation
          class="org.ruminaq.debug.model.SicDebugModelPresentation"
          id="org.ruminaq.debug.model.SicDebugModelPresentation">
      </debugModelPresentation>
   </extension>
</plugin>